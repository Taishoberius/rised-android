<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.taishoberius.rised.meteo.view.MeteoCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <include layout="@layout/meteo"/>

    </com.taishoberius.rised.meteo.view.MeteoCardView>

    <com.taishoberius.rised.bluetooth.view.BluetoothCardView
    android:id="@+id/bluetooth_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <include layout="@layout/bluetooth"/>
    </com.taishoberius.rised.bluetooth.view.BluetoothCardView>

    <com.taishoberius.rised.trajet.view.ItineraryCardView
        android:id="@+id/itinerary_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/itinerary"/>
    </com.taishoberius.rised.trajet.view.ItineraryCardView>

    <com.taishoberius.rised.news.view.NewsView
    android:id="@+id/news_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <include layout="@layout/news"/>
</com.taishoberius.rised.news.view.NewsView>

    <com.taishoberius.rised.notes.view.NotesView
        android:id="@+id/notes_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/notes"/>
    </com.taishoberius.rised.notes.view.NotesView>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim_brush"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txv_temperature"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txv_humidity"
        android:paddingLeft="10sp"
        android:text="@string/current_temperature"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:text="@string/current_humidity"
        android:visibility="gone"/>

    <View
        android:id="@+id/sleep_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>